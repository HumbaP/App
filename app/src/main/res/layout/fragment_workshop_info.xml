<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="fill_parent"
android:orientation="vertical"
tools:context="mx.com.sisei.www.sisei.fragments.ConferenceFragment"
    android:background="@color/backgroundColor"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/activity_vertical_margin">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_conference_combined_layout">
                <RelativeLayout
                    android:id="@+id/workshop_background"
                    android:background="@color/colorNav"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    ></RelativeLayout>
                <ImageView
                    android:id="@+id/workshop_logo"
                    android:src="@drawable/gub_rostro"
                    android:layout_width="@dimen/fragment_conference_logo"
                    android:layout_height="@dimen/fragment_conference_logo"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/fragment_conference_image_top_margin"
                    />
                <TextView
                    android:id="@+id/workshop_name"
                    android:text="Nombre"
                    android:textSize="@dimen/text_conference_title"
                    android:layout_gravity="bottom|center"
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_height="wrap_content" />
                <Button
                    android:text="XX/XX"
                    android:id="@+id/workshop_joined"
                    android:drawableLeft="@drawable/ic_person_add_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|top"
                    android:layout_marginRight="@dimen/activity_vertical_margin"
                    style="?android:attr/borderlessButtonStyle"
                    />
            </FrameLayout>


            <TextView
                android:id="@+id/workshop_description"
                android:text="Texto de ejemplo"
                android:layout_gravity="center"
                android:textSize="@dimen/text_conference_desc"
                android:gravity="center"
                android:padding="@dimen/activity_vertical_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/activity_vertical_margin">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size"
                        android:layout_marginRight="@dimen/nav_header_mini_spacing"
                        android:src="@drawable/ic_date_range_black_24dp" />

                    <TextView
                        android:id="@+id/workshop_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Example" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size"
                        android:layout_marginLeft="@dimen/activity_vertical_margin"
                        android:layout_marginRight="@dimen/nav_header_mini_spacing"
                        android:src="@drawable/ic_access_time_black_24dp" />

                    <TextView
                        android:id="@+id/workshop_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Example" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin">

                <ImageView
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:layout_marginRight="@dimen/nav_header_mini_spacing"
                    android:src="@drawable/ic_place_black_24dp" />

                <TextView
                    android:id="@+id/workshop_place"
                    android:text="Example"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
