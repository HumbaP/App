<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/activity_login"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context="mx.com.sisei.www.sisei.LoginActivity">

            <TextView
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="30sp"
                android:text="¡Hola me llamo Gub!"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:src="@drawable/gub"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:textSize="30sp"
                android:gravity="center"
                android:textAlignment="center"
                android:text="Gracias por descargar nuestra aplicación."
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:src="@drawable/logosisei"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:textSize="30sp"
                android:gravity="center"
                android:textAlignment="center"
                android:text="¡No olvides asistir a nuestro evento en noviembre!"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



            <ImageView
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:src="@drawable/slogan"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:textSize="30sp"
                android:gravity="center"
                android:textAlignment="center"
                android:text="Inicia sesión para disfrutar al máximo de nuestra aplicación"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:id="@+id/login_button"
                android:text="@string/login_button"
                android:layout_width="match_parent"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/politicas_button"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:textSize="19sp"
                android:gravity="center"
                android:textAlignment="center"
                android:text="Política de privacidad"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                />


        </LinearLayout>

    </ScrollView>
</RelativeLayout>
