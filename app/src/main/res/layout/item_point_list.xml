<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/item_card_view"
        android:layout_margin="@dimen/nav_header_mini_spacing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:padding="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/image_icon"
                android:src="@drawable/puntoss"
                android:layout_width="@dimen/com_facebook_profilepictureview_preset_size_small"
                android:layout_height="@dimen/com_facebook_profilepictureview_preset_size_small" />
            <TextView
                android:layout_marginLeft="@dimen/nav_header_mini_spacing"
                android:textAlignment="center"
                android:gravity="center"
                android:text="Titulo"
                android:id="@+id/text_point_name"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@id/image_icon"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_item"
                />

            <TextView
                android:layout_marginLeft="@dimen/nav_header_mini_spacing"
                android:layout_marginTop="2dp"
                android:textAlignment="center"
                android:gravity="center"
                android:text="Titulo"
                android:id="@+id/text_point_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/image_icon"
                android:layout_below="@id/text_point_name"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>