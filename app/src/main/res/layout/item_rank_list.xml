<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_margin="5dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="@dimen/nav_header_mini_spacing"
            >
        <TextView
            android:gravity="center"
            android:layout_gravity="left"
            android:id="@+id/text_place_rank"
            android:text="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="35dp"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:id="@+id/image_rank_profile"
            android:layout_width="@dimen/small_icon_size"
            android:layout_height="@dimen/small_icon_size" />

        <LinearLayout
            android:layout_weight="@integer/viewfinder_border_length"
            android:layout_marginLeft="@dimen/nav_header_mini_spacing"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:text="Hola"
                android:id="@+id/text_name_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:text="Hola"
                android:id="@+id/text_points_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>