<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="@dimen/nav_header_vertical_spacing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mx.com.sisei.www.sisei.fragments.PrizesFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/scanner_button"
        style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DFDFDF"
        android:dividerPadding="@dimen/nav_header_vertical_spacing"
        android:elevation="1dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/mini_icon_size"
            android:layout_height="@dimen/mini_icon_size"
            android:layout_gravity="right|center"
            android:src="@drawable/qrtopicon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/nav_header_vertical_spacing"
            android:text="Escáner"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/nav_header_vertical_spacing"
        android:id="@+id/decoder_button"
        style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DFDFDF"
        android:dividerPadding="@dimen/nav_header_vertical_spacing"
        android:elevation="1dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/mini_icon_size"
            android:layout_height="@dimen/mini_icon_size"
            android:layout_gravity="right|center"
            android:src="@drawable/lupa" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/nav_header_vertical_spacing"
            android:text="Decoder"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ranked_button"
        style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/nav_header_vertical_spacing"
        android:background="#DFDFDF"
        android:dividerPadding="@dimen/nav_header_vertical_spacing"
        android:elevation="1dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/mini_icon_size"
            android:layout_height="@dimen/mini_icon_size"
            android:layout_gravity="right|center"
            android:src="@drawable/ranks" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/nav_header_vertical_spacing"
            android:text="Clasificación"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
    </LinearLayout>

    <!--Button
        android:id="@+id/scanner_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Escaner" /-->

