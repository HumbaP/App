<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center">

    <android.support.v7.widget.CardView
        android:id="@+id/item_card_view"
        android:layout_margin="@dimen/nav_header_mini_spacing"
        android:layout_width="@dimen/big_icon_size"
        android:layout_height="@dimen/card_mini_size"
        >
        <RelativeLayout
            android:padding="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/image_item"
                android:layout_width="@dimen/med_icon_size"
                android:layout_height="@dimen/med_icon_size"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:textAlignment="center"
                android:gravity="center"
                android:text="Titulo"
                android:layout_marginTop="@dimen/nav_header_vertical_spacing"
                android:id="@+id/text_card_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/image_item"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>